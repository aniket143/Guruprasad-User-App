<script type="text/javascript" charset="utf-8"> 
  
$(function() {
      $("#callAjax").click(function() {
            var theName = $.trim($("#theName").val());
            if(theName=="")
            {
           alert("Please Enter Member Id");       
            }
            else{
           if(theName.length > 0)
            {$.ajax({
        //url: "demo3.php",
        url: "http://shopnearn.co.in/mobileapp/demo3.php",
           type     : 'GET',
              data: ({name: theName}),
                  cache: false,
                  dataType: "text",
                  success: onSuccess
                });}}});
     $("#resultLog").ajaxError(function(event, request, settings, exception) {
          $("#resultLog").html("Error Calling: " + settings.url + "<br />HTTP Code: " + request.status);});
function onSuccess(data)
        {
        var queryString = new Array();

          if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }


 $("#resultLog").html("Result: " + data);
            	 			window.location.href="memberid22.html?member="+encodeURIComponent(data)+"|"+myArray[0];
        }
  });
 
  $(function() {
  

      $("#callAjax1").click(function() {
      
            var theName1 = $.trim($("#theName1").val());
            if(theName1=="")
            {
           alert("Please Enter Mobile Number");       
            }
            else{
          if(theName1.length > 0)
            { $.ajax({
      // url: "mobno.php",
      url: "http://shopnearn.co.in/mobileapp/mobno.php",
           type     : 'GET',
             data: ({name: theName1}),
                  cache: false,
                  dataType: "text",
                  success: onSuccess
                });}}});
    $("#resultLog").ajaxError(function(event, request, settings, exception) {
          $("#resultLog").html("Error Calling: " + settings.url + "<br />HTTP Code: " + request.status);
        });
function onSuccess(data)
        {
        var queryString = new Array();

          if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }

var myArray=queryString[key].split('|');
//alert(myArray);
            $("#resultLog").html("Result: " + data);

            	 			window.location.href="mobno11.html?member="+encodeURIComponent(data)+"|"+myArray[0];
        }
        
  });
  
      
